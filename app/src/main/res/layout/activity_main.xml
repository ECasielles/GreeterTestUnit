<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.greeter.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    >

    <EditText
        android:id="@+id/greetEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="78dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/greetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/greetButton"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="@string/greetButton"
        app:layout_constraintBottom_toTopOf="@+id/messageTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetEditText"
        android:onClick="didTapGreetButton"
        />
    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="207dp"
        android:layout_height="0dp"
        android:layout_marginBottom="261dp"
        android:text="Hello, Lourdes!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetButton"
        />

</android.support.constraint.ConstraintLayout>
